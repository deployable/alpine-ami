{
  "builders": [{
    "type"         : "vagrant",
    "ssh_username" : "admin",
    "box_name"     : "debian/jessie64",
    "ssh_timeout"  : "2m",
  }],
  "provisioners": [{
    "type": "shell",
    "inline": [
      "set -uex",
      "sudo apt-get update -y",
      "sudo apt-get install python-pip python-dev libffi-dev libyaml-dev -y",
      "sudo pip install ansible"
    ]
  },
  {
    "type": "ansible-local",
    "playbook_file": "./playbook/playbook.yml",
    "inventory_groups": "alpine",
    "playbook_dir": "./playbook",
    "extra_arguments": "-vv"
  }]
}
